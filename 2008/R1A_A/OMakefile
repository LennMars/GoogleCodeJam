PROGRAM = camlprog

FILES[] =
  a

OCAMLPACKS[] += str
OCAML_OTHER_LIBS += nums
OCAMLINCLUDES += ../../util
OCAML_LIBS[] = ../../util/utils

OCamlProgram($(PROGRAM), $(FILES))

.DEFAULT: $(if $(BYTE_ENABLED), $(PROGRAM).run) \
          $(if $(NATIVE_ENABLED), $(PROGRAM).opt)

.PHONY: clean
clean:
  rm -f \
     $(filter-proper-targets $(glob $(addsuffix .*, $(FILES)))) \
     $(PROGRAM).run $(PROGRAM).opt